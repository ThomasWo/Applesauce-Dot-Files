" James vimrc file
"
set backupdir=~/.vim/backup,/tmp
set wrapscan
set spell		" Turns spelling on - Press "z=" to view spelling suggestions
set tabstop=4		" Number of spaces that a tab in the file counts for
set shiftwidth=4	" Number of spaces to use for each step of auto indent
set smarttab		" Tab in front of a line inserts a blank
set autoindent
set background=dark
colorscheme elflord

filetype plugin indent on
syntax on
